<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Talpa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Talpa.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav style="z-index: 20;" class="nav navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand letterspace" style="color: white;" asp-area="" asp-controller="Home" asp-action="Index">TALPA</a>
            <button class="navbar-toggler" style="background-color: white;" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" style="color: white" asp-area="" asp-controller="Team" asp-action="Index">Teams</a>
                        </li>
                    }
                </ul>
                @* <partial name="_LoginPartial" /> *@
                <ul class="nav navbar-nav navbar-right" style="display: flex; gap: 2em">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a asp-controller="Account" asp-action="Profile" style="color: white">Hallo @User.Identity.Name!</a>
                        </li>
                        <li>
                            <a id="qsLogoutBtn" asp-controller="Account" asp-action="Logout" style="color: white">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a id="qsLoginBtn" asp-controller="Account" asp-action="Login" style="color: white">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="sidenavbutton" id="sidenavbutton" onclick="sidenav()"></div>

<div id="sidenav" class="sidenav" style="position: absolute; padding-top: 60px; top: 0; bottom: 0; z-index: 10;">
    <div class="pb-3 pt-3 letterspace" style="color: white; font-weight: bold;">UPCOMING</div>
    <div style="display: flex; flex-direction: column; gap: 2em;">
        <div>
            <a href="" class="kwartaal-text letterspace">KWARTAAL 1</a>
            <div>Ongepland</div>
        </div>
        <div>
            <a href="" class="kwartaal-text letterspace">KWARTAAL 2</a>
            <div>Ongepland</div>
        </div>
        <div>
            <a href="" class="kwartaal-text letterspace">KWARTAAL 3</a>
            <div>Ongepland</div>
        </div>
        <div>
            <a href="" class="kwartaal-text letterspace">KWARTAAL 4</a>
            <div>Ongepland</div>
        </div>
    </div>
</div>

<main class="main" id="main">
    <h2 style="text-align: center;">@ViewData["Title"]</h2>
    @if (TempData.ContainsKey("Message"))
    {
        <div class="alert alert-@(TempData["MessageType"])">
            @TempData["Message"]
        </div>
    }

    @RenderBody()
</main>

<partial name="_CookieConsentPartial"/>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>

</html>