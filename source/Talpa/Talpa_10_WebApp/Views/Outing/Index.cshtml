@using Talpa_10_WebApp.ViewModels
@using Talpa_10_WebApp.Translations
@using Microsoft.Extensions.Localization
@model IEnumerable<Talpa_10_WebApp.ViewModels.OutingViewModel>
@inject IStringLocalizer<Shared> StringLocalizer

@{
    Shared SharedLocalizer = new(StringLocalizer);
    ViewData["Title"] = SharedLocalizer.Get("Index");
}

<div class="outer-container">
    @foreach (OutingViewModel outing in Model)
    {
        <a class="card-link" style="text-decoration: none; display: flex; justify-content: center; align-items: center; margin: 10px;" href="@Url.Action("Details", "Outing", new { id = outing.Id })">
            <div class="card" style="border-radius: 15px; background-image: url('https://cdn.pixabay.com/photo/2015/04/23/22/00/tree-736885_1280.jpg');">
                <div class="card-body">
                    <h1 class="card-title">
                        @outing.Name
                    </h1>
                </div>
            </div>
        </a>
    }
</div>