@using Microsoft.AspNetCore.Http.Extensions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Talpa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/outingstyle.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav style="z-index: 20;" class="nav navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand letterspace" style="color: white;" asp-area="" asp-controller="Home" asp-action="Index">TALPA</a>
            <button class="navbar-toggler" style="background-color: white;" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Team" asp-action="Index" style="@(new Uri(Context.Request.GetDisplayUrl()).AbsolutePath.StartsWith("/Team") ? "color: white !important; text-decoration: underline; font-weight: bold;" : "")">Teams</a>
                        </li>
                        <li class="nav-item">
                            <a href="" class="nav-link">Scorebord</a>
                        </li>
                    }
                    @if (User.IsInRole("Manager"))
                    {
                        <li class="nav-item">
                            <a asp-controller="Outing" asp-action="Index" class="nav-link" style="@(new Uri(Context.Request.GetDisplayUrl()).AbsolutePath.StartsWith("/Manager/Outing") ? "color: white !important; text-decoration: underline; font-weight: bold;" : "")">Beheer uitjes</a>
                        </li>
                        <li class="nav-item">
                            <a href="" class="nav-link">Scorebord</a>
                        </li>
                    }
                    @if (User.IsInRole("Employee"))
                    {
                        <li class="nav-item">
                            <a href="" class="nav-link">Te plannen uitjes</a>
                        </li>
                        <li class="nav-item">
                            <a href="" class="nav-link">Suggesties</a>
                        </li>
                    }
                </ul>
                @* <partial name="_LoginPartial" /> *@
                <ul class="nav navbar-nav navbar-right" style="display: flex; gap: 2em">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a asp-controller="Account" asp-action="Profile" style="color: white">Hallo @User.Identity.Name!</a>
                        </li>
                        <li>
                            <a id="qsLogoutBtn" asp-controller="Account" asp-action="Logout" style="color: white">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a id="qsLoginBtn" asp-controller="Account" asp-action="Login" style="color: white">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<main class="main" id="main">
    <h2>@ViewData["Title"]</h2>
    @if (TempData.ContainsKey("Message"))
    {
        <div class="alert alert-@(TempData["MessageType"])">
            @TempData["Message"]
        </div>
    }

    @RenderBody()
</main>

@* SELECT2 *@
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
@* ENDSELECT2 *@
<script>
    $(".js-dynamic-tokenizer").select2({
        tags: true,
        tokenSeparators: [',']
    });
    $(".js-tokenizer").select2();
</script>

@* DATEPICKER *@
<link rel="stylesheet" type="text/css" href="~/datepicker/result-light.css">
<link rel="stylesheet" type="text/css" href="~/datepicker/bootstrap-datepicker3.min.css">
<link rel="stylesheet" type="text/css" href="~/datepicker/font-awesome.min.css">
<script type="text/javascript" src="~/datepicker/jquery-3.2.1.min.js"></script>
<script type="text/javascript" src="~/datepicker/bootstrap-datepicker.min.js"></script>
<script type="text/javascript" src="~/datepicker/bootstrap.min.js"></script>
@* ENDDATEPICKER *@

<script>
    $(document).ready(function() {
        $('#datepicker').datepicker({
            multidate: true,
            format: "dd/mm/yyyy",
            daysOfWeekHighlighted: "0,6",
            language: 'en',
            weekStart: 1,
        }).on('changeDate', function(e) {
            $(this).find('.input-group-addon .count').text(' ' + e.dates.length);
        });
    });
</script>


<partial name="_CookieConsentPartial"/>
@* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>

</html>