@using Talpa_10_WebApp.ViewModels
@using Talpa_10_WebApp.Translations
@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<Talpa_10_WebApp.ViewModels.SuggestionViewModel>
@inject IHtmlLocalizer<Shared> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Index"];
    ViewData["DisableMainContainer"] = "True";
}

<div style="background-color: rgb(245, 245, 245); padding: 1em; font-size: 1.5em">
    <h1 style="text-align: center">@SharedLocalizer["Suggestions"]</h1>
</div>

<div class="container" style="margin-top: 1em">
    @if (TempData.ContainsKey("Message"))
    {
        <div id="flashmessage" class="alert alert-@(TempData["MessageType"])">
            @TempData["Message"]
        </div>
    }

    <p>
        <a asp-action="Create" class="btn btn-outline-secondary">@SharedLocalizer["Create New"]</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                @SharedLocalizer["Name"]
            </th>
            <th>

            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (SuggestionViewModel item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">@SharedLocalizer["Edit"]</a>
                    @* <a asp-action="Details" asp-route-id="@item.Id">@SharedLocalizer["Details"]</a> | *@
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary" style="background-color: #D92A3B; border-color: #D92A3B;">@SharedLocalizer["Delete"]</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>