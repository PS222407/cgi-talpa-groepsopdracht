@using Talpa_10_WebApp.Translations
@using Microsoft.AspNetCore.Mvc.Localization
@model Talpa_10_WebApp.ViewModels.SuggestionViewModel
@inject IHtmlLocalizer<Shared> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Delete"];
    ViewData["DisableMainContainer"] = "True";
}

<div class="page-title-container">
    <h1 style="text-align: center">@SharedLocalizer["Suggestion"]</h1>
    <div class="page-title">@SharedLocalizer["Delete"]</div>
</div>

<div class="container">
    @if (TempData.ContainsKey("Message"))
    {
        <div id="flashmessage" class="alert alert-@(TempData["MessageType"])">
            @TempData["Message"]
        </div>
    }

    <div class="col-md-8 mx-auto">
        <h3>@SharedLocalizer["Are you sure you want to delete this?"]</h3>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @SharedLocalizer["Name"]
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>

        <form asp-action="Destroy">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group" style="display: flex; justify-content: space-between">
                <a asp-action="Index" class="btn btn-secondary">@SharedLocalizer["BackToList"]</a>
                <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>