@using Talpa_10_WebApp.Translations
@using Microsoft.AspNetCore.Mvc.Localization
@model Talpa_10_WebApp.RequestModels.CustomizationRequest
@inject IHtmlLocalizer<Shared> SharedLocalizer

@{
    Layout = "_Layout";
    ViewData["Title"] = SharedLocalizer["Edit"];
    ViewData["DisableMainContainer"] = "True";
}

<div class="page-title-container">
    <h1 style="text-align: center">@SharedLocalizer["Customization"]</h1>
    <div class="page-title">@SharedLocalizer["Edit"]</div>
</div>

<div class="container" style="margin-top: 1em">
    @if (TempData.ContainsKey("Message"))
    {
        <div class="alert alert-@(TempData["MessageType"])">
            @TempData["Message"]
        </div>
    }

    <hr />
    <div class="row" style="display: flex; justify-content: center">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Primary" class="control-label">@SharedLocalizer["Primary"]</label>
                    <input asp-for="Primary" type="color" class="form-control" />
                    <span asp-validation-for="Primary" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Secondary" class="control-label">@SharedLocalizer["Secondary"]</label>
                    <input asp-for="Secondary" type="color" class="form-control" />
                    <span asp-validation-for="Secondary" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Background" class="control-label">@SharedLocalizer["Background"]</label>
                    <input asp-for="Background" type="color" class="form-control" />
                    <span asp-validation-for="Background" class="text-danger"></span>
                </div>

                <div class="form-group" style="display: flex; justify-content: space-between">
                    <a class="btn btn-secondary" asp-action="Index">@SharedLocalizer["BackToList"]</a>
                    <input type="submit" value="@SharedLocalizer["Edit"]" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>