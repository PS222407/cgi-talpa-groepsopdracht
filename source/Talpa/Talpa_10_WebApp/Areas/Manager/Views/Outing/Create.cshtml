@using Talpa_10_WebApp.Translations
@using Microsoft.AspNetCore.Mvc.Localization
@model Talpa_10_WebApp.RequestModels.OutingCreateRequest
@inject IHtmlLocalizer<Shared> SharedLocalizer

@{
    Layout = "_Layout";
    ViewData["Title"] = SharedLocalizer["Create"];
    ViewData["DisableMainContainer"] = "True";
}

<div style="background-color: rgb(245, 245, 245); padding: 1em; font-size: 1.5em">
    <h1 style="text-align: center">@SharedLocalizer["Outing"]</h1>
    <div style="font-size: 0.8em; text-align: center">@SharedLocalizer["Create"]</div>
</div>

<div class="container" style="margin-top: 1em">
    @if (TempData.ContainsKey("Message"))
    {
        <div class="alert alert-@(TempData["MessageType"])">
            @TempData["Message"]
        </div>
    }

    <hr/>
    <div class="row" style="display: flex; justify-content: center">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Image" class="control-label">@SharedLocalizer["Image"]</label>
                    <input asp-for="Image" class="form-control" accept="image/png, image/gif, image/jpeg" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">@SharedLocalizer["Dates"]</label>
                    <div class="input-group date">
                        <div id="datepicker">
                            <input type="hidden" class="form-control" id="Dates" name="StringDates" value="@Model?.StringDates" placeholder="@SharedLocalizer["SelectDays"]" required="">
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Dates" class="text-danger"></span>

                <div class="form-group" style="display: flex; justify-content: space-between">
                    <a class="btn btn-secondary" asp-action="Index">@SharedLocalizer["BackToList"]</a>
                    <input type="submit" value="@SharedLocalizer["Create"]" class="btn btn-primary" style="background-color: #D92A3B; border-color: #D92A3B;"/>
                </div>
            </form>
        </div>
    </div>
</div>