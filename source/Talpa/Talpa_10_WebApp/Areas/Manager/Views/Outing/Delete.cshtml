@using Talpa_10_WebApp.Translations
@using Microsoft.AspNetCore.Mvc.Localization
@model Talpa_10_WebApp.ViewModels.OutingViewModel
@inject IHtmlLocalizer<Shared> SharedLocalizer

@{
    Layout = "_Layout";
    ViewData["Title"] = SharedLocalizer["Delete"];
}

<h1>@SharedLocalizer["Delete"]</h1>

<h3>@SharedLocalizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@SharedLocalizer["Outing"]</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Destroy">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-danger"/> |
        <a asp-action="Index">@SharedLocalizer["BackToList"]</a>
    </form>
</div>