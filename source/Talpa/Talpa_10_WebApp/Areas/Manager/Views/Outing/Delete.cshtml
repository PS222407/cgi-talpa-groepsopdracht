@using Talpa_10_WebApp.Translations
@using Microsoft.Extensions.Localization
@model Talpa_10_WebApp.ViewModels.OutingViewModel
@inject IStringLocalizer<Shared> StringLocalizer

@{
    Shared SharedLocalizer = new(StringLocalizer);
    Layout = "_Layout";
    ViewData["Title"] = SharedLocalizer.Get("Delete");
}

<h1>@SharedLocalizer.Get("Delete")</h1>

<h3>@SharedLocalizer.Get("Are you sure you want to delete this?")</h3>
<div>
    <h4>@SharedLocalizer.Get("Outing")</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Destroy">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="@SharedLocalizer.Get("Delete")" class="btn btn-danger"/> |
        <a asp-action="Index">@SharedLocalizer.Get("BackToList")</a>
    </form>
</div>